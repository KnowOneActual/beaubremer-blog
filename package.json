    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.24",
    "lite-youtube-embed": "^0.3.4",
    "luxon": "^3.7.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
