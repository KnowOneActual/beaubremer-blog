---
layout: 'base.njk'
---

<article>
  <header>
    <h1 class="text-5xl font-extrabold text-fuchsia-400 mb-4">{{ title }}</h1>
    {% if date %}
    <p class="text-gray-400">
      <time datetime="{{ page.date.toISOString() }}">{{ page.date | readableDate }}</time>
      <span class="mx-2">•</span>
      <span>{{ content | readingTime }}</span>
    </p>
    {% endif %} {# This is the section that displays the tags #} {% if tags %}
    <div class="mt-4">
      <span class="text-gray-400">Tagged in:</span>
      {% for tag in tags %} {% if tag != "posts" %}
      <a
        href="/tags/{{ tag | slugify }}/"
        class="inline-block bg-gray-800 text-fuchsia-300 rounded-full px-3 py-1 text-sm font-semibold ml-2 hover:bg-gray-700 transition-colors"
        >#{{ tag }}</a
      >
      {% endif %} {% endfor %}
    </div>
    {% endif %}
  </header>

  <hr class="border-gray-700 my-8" />

  {{ content | safe }}

  <hr class="border-gray-700 my-12" />

  <nav class="flex justify-between items-center py-4">
    <div>
      {% set prevPost = collections.posts | getPreviousCollectionItem(page) %}
      {% if prevPost %}
        <a href="{{ prevPost.url }}" class="text-fuchsia-400 hover:underline">← {{ prevPost.data.title }}</a>
      {% endif %}
    </div>
    <div>
      {% set nextPost = collections.posts | getNextCollectionItem(page) %}
      {% if nextPost %}
        <a href="{{ nextPost.url }}" class="text-fuchsia-400 hover:underline">{{ nextPost.data.title }} →</a>
      {% endif %}
    </div>
  </nav>
</article>
